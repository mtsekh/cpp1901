~~7

#include <iostream>
using namespace std;
int main() {
    int x;
    int y;
    int z;
    cout << "enter number 1" << endl;
    cin >> x;
    cout << "enter number 2" << endl;
    cin >> y;
    cout << "enter number 3" << endl;
    cin >> z;
    cout << (x + y + z)/3 <<endl;
    return 0;
}

~~8

#include <iostream>
using namespace std;
int main() {
    const int pi = 3;
    int r;
    cout << "enter radius" << endl;
    cin >> r;
    int formula = pi*r*2;
    cout << formula << endl;
    return 0;
}

